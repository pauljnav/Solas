{
    "scopeName": "source.solas",
    "name": "Solas",
    "author": "Paul Naughton, tecknikp@gmail.com",
    "fileTypes": ["solas"],

    "patterns": [
        {
            "include": "#main"
        }
    ],
    "repository": {
        "main": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.solas",
                    "match": "//.*$"
                },
                {
                    "name": "keyword.control.solas",
                    "match": "\\b(stream|refract|drift|shape|emit|if|and|or|not)\\b"
                },
                {
                    "name": "variable.language.solas",
                    "match": "@[a-z_]+(\\.[a-z_0-9]+)*|@env\\(\"[^\"]+\"\\)"
                },
                {
                    "name": "entity.name.type.solas",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                },
                {
                    "name": "keyword.operator.logical.solas",
                    "match": "->|==|!=|>|<"
                },
                {
                    "name": "string.quoted.double.solas",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        }
    }
}