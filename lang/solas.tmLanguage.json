{
    "scopeName": "source.solas",
    "name": "Solas",
    "author": "Paul Naughton, tecknikp@gmail.com",
    "fileTypes": [
        "solas"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#resourceRoots"
        },
        {
            "include": "#resourceCalls"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.solas",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.solas",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.solas",
                    "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.solas",
                    "match": "\\b(stream|emit|grow|refract|shape|on|error|drift|to|as|init|step|while|evolve|logic)\\b"
                },
                {
                    "name": "constant.language.boolean.solas",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "keyword.operator.logical.solas",
                    "match": "\\b(is|not|and)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.solas",
                    "match": "\\b(String|Number|Boolean|UUID|Blob)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.solas",
                    "match": "->|>=|<=|>|<|==|!=|:"
                }
            ]
        },
        "resourceRoots": {
            "patterns": [
                {
                    "name": "variable.language.resource-root.solas",
                    "match": "@(net|data|math|core|env|cache)\\b"
                }
            ]
        },
        "resourceCalls": {
            "patterns": [
                {
                    "name": "support.function.network.solas",
                    "match": "\\b(pulse|stream|request|api)\\s*\\("
                },
                {
                    "name": "support.function.network-modifier.solas",
                    "match": "\\b(secure|retry|mirror)\\s*\\("
                },
                {
                    "name": "support.function.data-action.solas",
                    "match": "\\b(store|recall|drop)\\s*\\("
                },
                {
                    "name": "support.function.data-modifier.solas",
                    "match": "\\b(as|on)\\s*\\("
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.solas",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}